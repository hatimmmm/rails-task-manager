<div class="container">
  <h1>Task : <span><%= @task.title %></h1>
  <form method="POST" action="/tasks/<%=@task.id%>" name="task">
    <input type="hidden" name="_method" value="patch">
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input type="text" class="form-control" id="title" name="task[title]" value=<%= @task.title %> >
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Details:</label>
      <input type="text" class="form-control" id="details"  name="task[details]" value=<%= @task.details%>>
    </div>
    <div class="mb-3 form-check">
      <input type="checkbox" class="form-check-input" id="completed" name="task[completed]">
      <label class="form-check-label" for="completed">Completed</label>
    </div>
    <%hidden_field_tag 'id', @task.id%>
    <input type="submit" class="btn btn-success" value="Update task">
  </form>
  <%= link_to "Add another task", "/" %>
</div>
<div>
</div>
