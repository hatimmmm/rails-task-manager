<div class="container p-5">
  <h1>Add a task </h1>
  <form class="form w-50" action="/create" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input class="form-control mb-4" type="text" name='title'>
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
      <input class="form-control mb-4" type="text" name='details'>
    </div>
    <input class="btn btn-success mb-5" type="submit" value='add task'>
  </form>
  <ul class="list-group w-50">
    <%@tasks.each do |task|%>

      <li class="list-group-item d-flex justify-content-between align-items-start">
        <span class="p-2"><%=task[:id]%></span>
        <span class="p-2"><input class="form-check-input" type="checkbox" <%=task[:completed] ? "checked" : "" %>/></span>
        <div class="ms-2 me-auto">
          <a href="tasks/<%=task[:id]%>" class="fw-bold"><%=task[:title]%></a>
         
        </div>
        <form action="/tasks/<%=task[:id]%>" method="DELETE">
          <input class="btn btn-danger" type="submit" value='X'>
        </form>
      </li>
    <%end%>
  </ul>
  <div/>
